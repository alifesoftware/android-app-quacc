<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.nenick.quacc.addaccounting.AddAccountingFragment"
    android:clickable="true">

    <Spinner
        android:id="@+id/accountingType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/date"
        android:layout_toStartOf="@+id/date"
        android:layout_marginRight="10dp" />


    <EditText
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02.02.2002"
        android:editable="false"
        android:inputType="none"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:elegantTextHeight="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <TextView
        android:id="@+id/intervalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Interval"
        android:layout_below="@+id/accountingType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />


    <Spinner
        android:id="@+id/interval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/intervalLabel"
        android:layout_alignLeft="@+id/intervalLabel"
        android:layout_alignStart="@+id/intervalLabel"
        android:spinnerMode="dialog"
        android:layout_toLeftOf="@+id/category"
        android:layout_toStartOf="@+id/category"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/categoryLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategorie"
        android:layout_alignBaseline="@+id/intervalLabel"
        android:layout_alignBottom="@+id/intervalLabel"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date" />


    <Spinner
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/categoryLabel"
        android:layout_alignLeft="@+id/categoryLabel"
        android:layout_alignStart="@+id/categoryLabel"
        android:layout_alignRight="@+id/date"
        android:layout_alignEnd="@+id/date" />


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editText"
        android:layout_marginTop="22dp" />

    <ImageButton
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_btn_speak_now"
        android:layout_above="@+id/text1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buchungsart"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Datum"
        android:id="@+id/textView3"
        android:layout_above="@+id/accountingType"
        android:layout_alignLeft="@+id/text1"
        android:layout_alignStart="@+id/text1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Betrag"
        android:id="@+id/textView4"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/interval"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:text="0,00"
        android:gravity="end"
        android:inputType="numberDecimal"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/interval"
        android:layout_alignRight="@+id/category"
        android:layout_alignEnd="@+id/category"
        android:layout_marginTop="-10dp" />

</RelativeLayout>
