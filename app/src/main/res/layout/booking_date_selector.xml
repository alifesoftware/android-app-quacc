<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookingDateSelectorLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="38dp"
    android:visibility="visible"
    tools:visibility="visible">

    <TextView
        android:id="@+id/year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:freezesText="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="2015" />

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="35dp"
        android:freezesText="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="September" />

    <TextView
        android:id="@+id/yearDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="   &lt;      "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/yearUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/yearDown"
        android:text="     >   "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/monthUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:text="           >   "
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/monthDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/monthUp"
        android:text="   &lt;           "
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>